<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.hw3.MainActivity">
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/layoutView"
        >
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/layoutSure" android:visibility="gone"
            tools:visibility="gone" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:text="Jesteś pewien?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:gravity="center"
                android:textColor="#000000"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="59dp">
            <Button
                    android:text="Tak"
                    android:layout_width="111dp"
                    android:layout_height="wrap_content" android:id="@+id/buttonYes"/>
            <Button
                    android:text="Nie"
                    android:layout_width="106dp"
                    android:layout_height="wrap_content" android:id="@+id/buttonNo"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="40dp"
            android:id="@+id/scrollView5" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/llayoutEditAdd" android:visibility="gone"
                tools:visibility="gone"
                android:layout_marginTop="30px">
            <TextView
                    android:text="Jakieś pole jest puste!"
                    android:layout_width="match_parent"
                    android:layout_height="33dp" android:id="@+id/textViewSthEmpty" android:layout_weight="1"
                    android:textColor="#FF0000" android:gravity="center" android:visibility="gone"
                    tools:visibility="gone"/>
            <TextView
                    android:text="Tytuł"
                    android:layout_width="match_parent"
                    android:layout_height="80px" android:id="@+id/textView4" android:layout_weight="1"
                    android:textColor="#000000" android:textSize="12sp" android:background="#DD47C830"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextTitle" android:layout_weight="1" android:textColor="#000000"
                    android:textSize="14sp" android:layout_marginBottom="20px" android:hint='"Pan Tadeusz"'
                    android:textColorHint="#77000000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80px" android:id="@+id/model2" android:layout_weight="1"
                    android:text="Autor" android:textColor="#000000" android:textSize="12sp"
                    android:background="#DD47C830"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextAuthor" android:layout_weight="1" android:textColor="#000000"
                    android:textSize="14sp" android:layout_marginBottom="20px" android:hint="Adam Mickiewicz"
                    android:textColorHint="#77000000"/>
            <TextView
                    android:text="Rok wydania"
                    android:layout_width="match_parent"
                    android:layout_height="80px" android:id="@+id/textView5" android:layout_weight="1"
                    android:textColor="#000000" android:textSize="12sp" android:background="#DD47C830"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextYear" android:layout_weight="1" android:textColor="#000000"
                    android:textSize="14sp" android:layout_marginBottom="20px" android:hint="1856"
                    android:textColorHint="#77000000"/>
            <TextView
                    android:text="Rodzaj"
                    android:layout_width="match_parent"
                    android:layout_height="80px" android:id="@+id/mocSilnika2" android:layout_weight="1"
                    android:textColor="#000000" android:textSize="12sp" android:background="#DD47C830"
                    android:gravity="center"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextType" android:layout_weight="1" android:textColor="#000000"
                    android:textSize="14sp" android:layout_marginBottom="20px" android:hint="Epopeja"
                    android:textColorHint="#77000000"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="71dp" android:id="@+id/buttonAddBook"
                    tools:visibility="visible" android:visibility="visible"
                    tools:text="Dodaj książkę" android:textColor="#000000" android:layout_weight="1"
                    android:background="#E84D9E"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="+"
            android:layout_width="96dp"
            android:layout_height="78dp" android:id="@+id/buttonAdd"
            android:textSize="36sp" android:background="#FFC107"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="40px" android:layout_marginBottom="40px"/>
</androidx.constraintlayout.widget.ConstraintLayout>